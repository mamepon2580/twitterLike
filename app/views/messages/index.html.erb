<%= render 'head', tweet: @tweet %>
<%= link_to 'New Message', new_message_path %>
<table>
  <thead>
    <tr>
      <th>Send user</th>
      <th>Send user name</th>
      <th>Receive user</th>
      <th>Receive user name</th>
      <th>Message time</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.send_user_id %></td>
        <td><%= message.send_user_name %></td>
        <td><%= message.receive_user_id %></td>
        <td><%= message.receive_user_name %></td>
        <td><%= message.message_time %></td>
        <td><%= message.content %></td>
        <td><%= link_to 'Show', message %></td>
        <td><%= link_to 'Edit', edit_message_path(message) %></td>
        <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
